{
  "name": "node-backend",
  "version": "1.0.0",
  "description": "Production-ready Node.js backend application",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter @app/api dev",
    "build": "pnpm -r build",
    "start": "pnpm --filter @app/api start",
    "lint": "eslint \"{apps,packages}/**/*.ts\" --fix",
    "format": "prettier --write \"{apps,packages}/**/*.ts\"",
    "prisma:generate": "pnpm --filter @packages/database prisma generate",
    "prisma:migrate:dev": "pnpm --filter @packages/database prisma migrate dev",
    "prisma:migrate:deploy": "pnpm --filter @packages/database prisma migrate deploy",
    "prisma:studio": "pnpm --filter @packages/database prisma studio",
    "prisma:seed": "pnpm --filter @packages/database prisma db seed",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}

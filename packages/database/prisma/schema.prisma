generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// IDENTITY DOMAIN
// ============================================

model User {
  id                    String      @id @default(uuid()) @db.Uuid
  email                 String      @unique @db.VarChar(255)
  passwordHash          String      @db.VarChar(255)
  firstName             String      @db.VarChar(100)
  lastName              String      @db.VarChar(100)
  status                UserStatus  @default(ACTIVE)
  emailVerified         Boolean     @default(false)
  resetPasswordToken    String?     @db.VarChar(255)
  resetPasswordExpires  DateTime?   @db.Timestamptz

  // Multi-tenancy
  organizationId String       @db.Uuid
  organization   Organization @relation(fields: [organizationId], references: [id])

  // RBAC
  userRoles      UserRole[] @relation("userRoles")

  // Audit fields
  createdAt      DateTime  @default(now()) @db.Timestamptz
  updatedAt      DateTime  @updatedAt @db.Timestamptz
  deletedAt      DateTime? @db.Timestamptz
  createdBy      String?   @db.Uuid
  updatedBy      String?   @db.Uuid

  // Optimistic locking
  version        Int       @default(1)

  // Relations
  sessions       Session[]
  refreshTokens  RefreshToken[]
  auditLogs      AuditLog[]
  notifications  Notification[]

  @@index([organizationId])
  @@index([email])
  @@index([status])
  @@map("users")
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  PENDING_VERIFICATION
  DEACTIVATED
}

model Session {
  id             String   @id @default(uuid()) @db.Uuid
  userId         String   @db.Uuid
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token          String   @unique @db.VarChar(255)
  expiresAt      DateTime @db.Timestamptz
  ipAddress      String?  @db.VarChar(45)
  userAgent      String?  @db.Text
  createdAt      DateTime @default(now()) @db.Timestamptz

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@map("sessions")
}

model RefreshToken {
  id             String    @id @default(uuid()) @db.Uuid
  userId         String    @db.Uuid
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  token          String    @unique @db.VarChar(255)
  expiresAt      DateTime  @db.Timestamptz
  isRevoked      Boolean   @default(false)
  createdAt      DateTime  @default(now()) @db.Timestamptz
  revokedAt      DateTime? @db.Timestamptz

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@map("refresh_tokens")
}

// ============================================
// ORGANIZATION DOMAIN
// ============================================

model Organization {
  id             String              @id @default(uuid()) @db.Uuid
  name           String              @db.VarChar(255)
  slug           String              @unique @db.VarChar(255)
  status         OrganizationStatus  @default(ACTIVE)
  plan           String              @default("FREE") @db.VarChar(50)

  // Settings (JSONB for flexibility)
  settings       Json                @default("{}")

  // Audit fields
  createdAt      DateTime  @default(now()) @db.Timestamptz
  updatedAt      DateTime  @updatedAt @db.Timestamptz
  deletedAt      DateTime? @db.Timestamptz
  createdBy      String?   @db.Uuid
  updatedBy      String?   @db.Uuid
  version        Int       @default(1)

  // Relations
  users          User[]
  roles          Role[]
  auditLogs      AuditLog[]

  @@index([slug])
  @@index([status])
  @@map("organizations")
}

enum OrganizationStatus {
  ACTIVE
  SUSPENDED
  TRIAL
  CANCELLED
}

// ============================================
// PERMISSIONS DOMAIN
// ============================================

model Role {
  id             String   @id @default(uuid()) @db.Uuid
  name           String   @db.VarChar(100)
  description    String?  @db.Text
  isSystem       Boolean  @default(false)

  // Multi-tenancy
  organizationId String       @db.Uuid
  organization   Organization @relation(fields: [organizationId], references: [id])

  // Permissions (many-to-many)
  permissions    RolePermission[]

  // Users with this role
  userRoles      UserRole[] @relation("roleUsers")

  // Audit fields
  createdAt      DateTime  @default(now()) @db.Timestamptz
  updatedAt      DateTime  @updatedAt @db.Timestamptz
  deletedAt      DateTime? @db.Timestamptz
  version        Int       @default(1)

  @@unique([organizationId, name])
  @@index([organizationId])
  @@map("roles")
}

model Permission {
  id             String           @id @default(uuid()) @db.Uuid
  resource       String           @db.VarChar(100)
  action         String           @db.VarChar(100)
  description    String?          @db.Text

  // Roles with this permission
  roles          RolePermission[]

  createdAt      DateTime @default(now()) @db.Timestamptz

  @@unique([resource, action])
  @@index([resource])
  @@map("permissions")
}

// Join table for User-Role many-to-many
model UserRole {
  userId         String   @db.Uuid
  user           User     @relation("userRoles", fields: [userId], references: [id], onDelete: Cascade)
  roleId         String   @db.Uuid
  role           Role     @relation("roleUsers", fields: [roleId], references: [id], onDelete: Cascade)

  assignedAt     DateTime @default(now()) @db.Timestamptz
  assignedBy     String?  @db.Uuid

  @@id([userId, roleId])
  @@index([userId])
  @@index([roleId])
  @@map("user_roles")
}

// Join table for Role-Permission many-to-many
model RolePermission {
  roleId         String     @db.Uuid
  role           Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permissionId   String     @db.Uuid
  permission     Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  assignedAt     DateTime @default(now()) @db.Timestamptz

  @@id([roleId, permissionId])
  @@index([roleId])
  @@index([permissionId])
  @@map("role_permissions")
}

// ============================================
// AUDIT DOMAIN
// ============================================

model AuditLog {
  id             String       @id @default(uuid()) @db.Uuid

  // Multi-tenancy
  organizationId String       @db.Uuid
  organization   Organization @relation(fields: [organizationId], references: [id])

  // Actor
  userId         String @db.Uuid
  user           User   @relation(fields: [userId], references: [id])

  // Action details
  action         String @db.VarChar(255)
  resource       String @db.VarChar(100)
  resourceId     String @db.Uuid

  // Changes (JSONB)
  changesBefore  Json?
  changesAfter   Json?

  // Request context
  ipAddress      String  @db.VarChar(45)
  userAgent      String? @db.Text
  correlationId  String  @db.VarChar(255)

  timestamp      DateTime @default(now()) @db.Timestamptz

  @@index([organizationId])
  @@index([userId])
  @@index([action])
  @@index([resourceId])
  @@index([timestamp])
  @@index([correlationId])
  @@map("audit_logs")
}

// ============================================
// NOTIFICATIONS DOMAIN
// ============================================

model Notification {
  id             String           @id @default(uuid()) @db.Uuid
  userId         String           @db.Uuid
  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  type           NotificationType
  title          String           @db.VarChar(255)
  message        String           @db.Text
  data           Json?

  isRead         Boolean   @default(false)
  readAt         DateTime? @db.Timestamptz

  createdAt      DateTime @default(now()) @db.Timestamptz

  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
  @@map("notifications")
}

enum NotificationType {
  INFO
  WARNING
  ERROR
  SUCCESS
}

// ============================================
// MONUMENTS DOMAIN
// ============================================

model Era {
  id         Int       @id @default(autoincrement())
  nameAr     String    @map("name_ar") @db.VarChar
  nameEn     String    @map("name_en") @db.VarChar
  dateFrom   String    @map("date_from") @db.VarChar
  dateTo     String    @map("date_to") @db.VarChar
  hijriFrom  String    @map("hijri_from") @db.VarChar
  hijriTo    String    @map("hijri_to") @db.VarChar
  createdAt  DateTime? @default(now()) @map("created_at") @db.Timestamp

  // Relations
  dynasties            Dynasty[]
  monuments            Monument[]
  monumentsEras        MonumentEra[]
  galleries            Gallery[]
  descriptionMonuments DescriptionMonument[]

  @@map("eras")
}

model Dynasty {
  id         Int       @id @default(autoincrement())
  nameAr     String    @map("name_ar") @db.VarChar
  nameEn     String    @map("name_en") @db.VarChar
  eraId      Int       @map("era_id")
  dateFrom   String    @map("date_from") @db.VarChar
  dateTo     String    @map("date_to") @db.VarChar
  hijriFrom  String    @map("hijri_from") @db.VarChar
  hijriTo    String    @map("hijri_to") @db.VarChar
  createdAt  DateTime? @default(now()) @map("created_at") @db.Timestamp

  // Relations
  era                  Era                   @relation(fields: [eraId], references: [id])
  monuments            Monument[]
  galleries            Gallery[]
  descriptionMonuments DescriptionMonument[]

  @@map("dynasty")
}

model MonumentType {
  id         Int       @id @default(autoincrement())
  nameAr     String    @map("name_ar") @db.VarChar
  nameEn     String    @map("name_en") @db.VarChar
  createdAt  DateTime? @default(now()) @map("created_at") @db.Timestamp

  // Relations
  monuments            Monument[]
  monumentsEras        MonumentEra[]
  galleries            Gallery[]
  descriptionMonuments DescriptionMonument[]

  @@map("monuments_type")
}

model Monument {
  id                  Int       @id @default(autoincrement())
  monumentNameAr      String    @map("monument_name_ar") @db.VarChar
  monumentNameEn      String    @map("monument_name_en") @db.VarChar
  monumentBiographyAr String    @map("monument_biography_ar") @db.VarChar
  monumentBiographyEn String    @map("monument_biography_en") @db.VarChar
  lat                 String    @db.VarChar
  lng                 String    @db.VarChar
  image               String    @db.VarChar
  mDate               String    @map("m_date") @db.VarChar
  monumentsTypeId     Int       @map("monuments_type_id")
  eraId               Int       @map("era_id")
  dynastyId           Int       @map("dynasty_id")
  zoom                String    @db.VarChar
  center              String    @db.VarChar
  createdAt           DateTime? @default(now()) @map("created_at") @db.Timestamp

  // Relations
  monumentType          MonumentType          @relation(fields: [monumentsTypeId], references: [id])
  era                   Era                   @relation(fields: [eraId], references: [id])
  dynasty               Dynasty               @relation(fields: [dynastyId], references: [id])
  galleries             Gallery[]
  monumentDescriptions  DescriptionMonument[]
  monumentsEra          MonumentEra[]
  monumentSources       MonumentSource[]
  monumentBooks         MonumentBook[]
  favorites             Favorite[]
  browsingHistory       BrowsingHistory[]

  @@map("monuments")
}

model MonumentEra {
  id               Int       @id @default(autoincrement())
  monumentId       Int?      @map("monument_id")
  eraId            Int       @map("era_id")
  monumentsTypeId  Int       @map("monuments_type_id")
  createdAt        DateTime? @default(now()) @map("created_at") @db.Timestamp

  // Relations
  monument     Monument?    @relation(fields: [monumentId], references: [id], onDelete: Cascade)
  era          Era          @relation(fields: [eraId], references: [id])
  monumentType MonumentType @relation(fields: [monumentsTypeId], references: [id])

  @@index([monumentId])
  @@map("monuments_era")
}

model Gallery {
  id               Int       @id @default(autoincrement())
  galleryPath      String    @map("gallery_path") @db.VarChar
  dynastyId        Int       @map("dynasty_id")
  eraId            Int       @map("era_id")
  monumentsTypeId  Int       @map("monuments_type_id")
  monumentsId      Int       @map("monuments_id")
  createdAt        DateTime? @default(now()) @map("created_at") @db.Timestamp

  // Relations
  dynasty      Dynasty      @relation(fields: [dynastyId], references: [id])
  era          Era          @relation(fields: [eraId], references: [id])
  monumentType MonumentType @relation(fields: [monumentsTypeId], references: [id])
  monument     Monument     @relation(fields: [monumentsId], references: [id])

  @@map("gallery")
}

model DescriptionMonument {
  id               Int       @id @default(autoincrement())
  descriptionAr    String    @map("description_ar") @db.VarChar
  descriptionEn    String    @map("description_en") @db.VarChar
  monumentId       Int       @map("monument_id")
  eraId            Int?      @map("era_id")
  monumentsTypeId  Int?      @map("monuments_type_id")
  dynastyId        Int?      @map("dynasty_id")
  createdAt        DateTime? @default(now()) @map("created_at") @db.Timestamp

  // Relations
  monument     Monument     @relation(fields: [monumentId], references: [id], onDelete: Cascade)
  era          Era?         @relation(fields: [eraId], references: [id])
  monumentType MonumentType? @relation(fields: [monumentsTypeId], references: [id])
  dynasty      Dynasty?     @relation(fields: [dynastyId], references: [id])

  @@index([monumentId])
  @@map("description_monuments")
}

// ============================================
// SOURCES AND BOOKS DOMAIN
// ============================================

enum SourceType {
  JOURNAL
  BOOK
  WEBSITE
  REPORT
  THESIS
  CONFERENCE
  ENCYCLOPEDIA
}

model Source {
  id                Int       @id @default(autoincrement())
  titleAr           String    @map("title_ar") @db.VarChar(500)
  titleEn           String    @map("title_en") @db.VarChar(500)
  authorAr          String?   @map("author_ar") @db.VarChar(255)
  authorEn          String?   @map("author_en") @db.VarChar(255)
  publicationYear   Int?      @map("publication_year")
  publisher         String?   @db.VarChar(255)
  sourceType        SourceType? @map("source_type")
  url               String?   @db.VarChar(1000)
  pages             String?   @db.VarChar(100)
  volume            String?   @db.VarChar(50)
  issue             String?   @db.VarChar(50)
  isbn              String?   @db.VarChar(50)
  doi               String?   @db.VarChar(255)
  notes             String?   @db.Text
  createdAt         DateTime? @default(now()) @map("created_at") @db.Timestamp

  // Relations
  monumentSources   MonumentSource[]

  @@map("sources")
}

model Book {
  id                Int       @id @default(autoincrement())
  titleAr           String    @map("title_ar") @db.VarChar(500)
  titleEn           String    @map("title_en") @db.VarChar(500)
  authorAr          String    @map("author_ar") @db.VarChar(255)
  authorEn          String    @map("author_en") @db.VarChar(255)
  coverImage        String?   @map("cover_image") @db.VarChar(500)
  publicationYear   Int?      @map("publication_year")
  publisher         String?   @db.VarChar(255)
  isbn              String?   @db.VarChar(50)
  pages             Int?
  description       String?   @db.Text
  readUrl           String?   @map("read_url") @db.VarChar(1000)
  purchaseUrl       String?   @map("purchase_url") @db.VarChar(1000)
  language          String?   @db.VarChar(10)
  edition           String?   @db.VarChar(50)
  createdAt         DateTime? @default(now()) @map("created_at") @db.Timestamp

  // Relations
  monumentBooks     MonumentBook[]

  @@map("books")
}

model MonumentSource {
  id          Int       @id @default(autoincrement())
  monumentId  Int       @map("monument_id")
  sourceId    Int       @map("source_id")
  pageNumbers String?   @map("page_numbers") @db.VarChar(100)
  notes       String?   @db.Text
  displayOrder Int?     @map("display_order")
  createdAt   DateTime? @default(now()) @map("created_at") @db.Timestamp

  // Relations
  monument    Monument  @relation(fields: [monumentId], references: [id], onDelete: Cascade)
  source      Source    @relation(fields: [sourceId], references: [id], onDelete: Cascade)

  @@unique([monumentId, sourceId])
  @@index([monumentId])
  @@index([sourceId])
  @@map("monument_sources")
}

model MonumentBook {
  id           Int       @id @default(autoincrement())
  monumentId   Int       @map("monument_id")
  bookId       Int       @map("book_id")
  relevance    String?   @db.VarChar(255)
  displayOrder Int?      @map("display_order")
  createdAt    DateTime? @default(now()) @map("created_at") @db.Timestamp

  // Relations
  monument     Monument  @relation(fields: [monumentId], references: [id], onDelete: Cascade)
  book         Book      @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([monumentId, bookId])
  @@index([monumentId])
  @@index([bookId])
  @@map("monument_books")
}

// ============================================
// PORTAL DOMAIN
// ============================================

model PortalUser {
  id                    String              @id @default(uuid()) @db.Uuid
  email                 String              @unique @db.VarChar(255)
  passwordHash          String?             @db.VarChar(255)  // Nullable for OAuth-only users
  firstName             String              @db.VarChar(100)
  lastName              String              @db.VarChar(100)
  phone                 String?             @db.VarChar(50)
  location              String?             @db.VarChar(255)
  bio                   String?             @db.Text
  avatar                String?             @db.VarChar(500)
  status                PortalUserStatus    @default(ACTIVE)
  emailVerified         Boolean             @default(false)
  resetPasswordToken    String?             @db.VarChar(255)
  resetPasswordExpires  DateTime?           @db.Timestamptz
  createdAt             DateTime            @default(now()) @db.Timestamptz
  updatedAt             DateTime            @updatedAt @db.Timestamptz
  deletedAt             DateTime?           @db.Timestamptz
  lastLoginAt           DateTime?           @db.Timestamptz

  oauthProviders        OAuthProvider[]
  favorites             Favorite[]
  browsingHistory       BrowsingHistory[]
  savedSearches         SavedSearch[]
  settings              UserSettings?
  refreshTokens         PortalRefreshToken[]
  contactMessages       ContactMessage[]
  newsletterSubscription NewsletterSubscription?

  @@index([email])
  @@index([status])
  @@map("portal_users")
}

enum PortalUserStatus {
  ACTIVE
  SUSPENDED
  PENDING_VERIFICATION
  DEACTIVATED
}

model OAuthProvider {
  id            String              @id @default(uuid()) @db.Uuid
  portalUserId  String              @db.Uuid
  portalUser    PortalUser          @relation(fields: [portalUserId], references: [id], onDelete: Cascade)
  provider      OAuthProviderType
  providerId    String              @db.VarChar(255)
  accessToken   String?             @db.Text
  refreshToken  String?             @db.Text
  expiresAt     DateTime?           @db.Timestamptz
  profileData   Json?
  createdAt     DateTime            @default(now()) @db.Timestamptz
  updatedAt     DateTime            @updatedAt @db.Timestamptz

  @@unique([provider, providerId])
  @@index([portalUserId])
  @@map("oauth_providers")
}

enum OAuthProviderType {
  GOOGLE
  FACEBOOK
  APPLE
}

model PortalRefreshToken {
  id           String      @id @default(uuid()) @db.Uuid
  portalUserId String      @db.Uuid
  portalUser   PortalUser  @relation(fields: [portalUserId], references: [id], onDelete: Cascade)
  token        String      @unique @db.VarChar(255)
  expiresAt    DateTime    @db.Timestamptz
  isRevoked    Boolean     @default(false)
  createdAt    DateTime    @default(now()) @db.Timestamptz
  revokedAt    DateTime?   @db.Timestamptz

  @@index([portalUserId])
  @@index([token])
  @@map("portal_refresh_tokens")
}

model Favorite {
  id           String      @id @default(uuid()) @db.Uuid
  portalUserId String      @db.Uuid
  portalUser   PortalUser  @relation(fields: [portalUserId], references: [id], onDelete: Cascade)
  monumentId   Int
  monument     Monument    @relation(fields: [monumentId], references: [id], onDelete: Cascade)
  notes        String?     @db.Text
  createdAt    DateTime    @default(now()) @db.Timestamptz

  @@unique([portalUserId, monumentId])
  @@index([portalUserId])
  @@index([monumentId])
  @@map("favorites")
}

model BrowsingHistory {
  id              String      @id @default(uuid()) @db.Uuid
  portalUserId    String      @db.Uuid
  portalUser      PortalUser  @relation(fields: [portalUserId], references: [id], onDelete: Cascade)
  monumentId      Int
  monument        Monument    @relation(fields: [monumentId], references: [id], onDelete: Cascade)
  visitedAt       DateTime    @default(now()) @db.Timestamptz
  durationSeconds Int?

  @@index([portalUserId])
  @@index([monumentId])
  @@index([visitedAt])
  @@map("browsing_history")
}

model SavedSearch {
  id              String      @id @default(uuid()) @db.Uuid
  portalUserId    String      @db.Uuid
  portalUser      PortalUser  @relation(fields: [portalUserId], references: [id], onDelete: Cascade)
  name            String      @db.VarChar(255)
  keyword         String?     @db.VarChar(500)
  eraIds          Int[]
  dynastyIds      Int[]
  monumentTypeIds Int[]
  dateFrom        String?     @db.VarChar(100)
  dateTo          String?     @db.VarChar(100)
  filters         Json
  resultCount     Int?
  lastRunAt       DateTime?   @db.Timestamptz
  createdAt       DateTime    @default(now()) @db.Timestamptz
  updatedAt       DateTime    @updatedAt @db.Timestamptz

  @@index([portalUserId])
  @@map("saved_searches")
}

model UserSettings {
  id                  String      @id @default(uuid()) @db.Uuid
  portalUserId        String      @unique @db.Uuid
  portalUser          PortalUser  @relation(fields: [portalUserId], references: [id], onDelete: Cascade)
  darkMode            Boolean     @default(false)
  language            String      @default("en") @db.VarChar(10)
  emailNotifications  Boolean     @default(true)
  pushNotifications   Boolean     @default(false)
  newsletterEnabled   Boolean     @default(true)
  siteUpdates         Boolean     @default(false)
  showBrowsingHistory Boolean     @default(true)
  autoSaveSearches    Boolean     @default(true)
  additionalSettings  Json        @default("{}")
  createdAt           DateTime    @default(now()) @db.Timestamptz
  updatedAt           DateTime    @updatedAt @db.Timestamptz

  @@map("user_settings")
}

model ContactMessage {
  id           String               @id @default(uuid()) @db.Uuid
  portalUserId String?              @db.Uuid
  portalUser   PortalUser?          @relation(fields: [portalUserId], references: [id], onDelete: SetNull)
  name         String               @db.VarChar(255)
  email        String               @db.VarChar(255)
  message      String               @db.Text
  status       ContactMessageStatus @default(PENDING)
  ipAddress    String?              @db.VarChar(45)
  userAgent    String?              @db.Text
  respondedAt  DateTime?            @db.Timestamptz
  respondedBy  String?              @db.Uuid
  response     String?              @db.Text
  createdAt    DateTime             @default(now()) @db.Timestamptz

  @@index([portalUserId])
  @@index([status])
  @@index([email])
  @@map("contact_messages")
}

enum ContactMessageStatus {
  PENDING
  IN_PROGRESS
  RESPONDED
  CLOSED
}

model NewsletterSubscription {
  id                String      @id @default(uuid()) @db.Uuid
  portalUserId      String?     @unique @db.Uuid
  portalUser        PortalUser? @relation(fields: [portalUserId], references: [id], onDelete: Cascade)
  email             String      @unique @db.VarChar(255)
  isSubscribed      Boolean     @default(true)
  verificationToken String?     @db.VarChar(255)
  verifiedAt        DateTime?   @db.Timestamptz
  unsubscribeToken  String      @unique @db.VarChar(255)
  subscribedAt      DateTime    @default(now()) @db.Timestamptz
  unsubscribedAt    DateTime?   @db.Timestamptz

  @@index([email])
  @@index([isSubscribed])
  @@map("newsletter_subscriptions")
}

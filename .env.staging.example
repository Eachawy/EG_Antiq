# ==========================================
# STAGING ENVIRONMENT CONFIGURATION
# ==========================================
# Copy this file to .env for staging deployment
# Generate unique secrets using: openssl rand -base64 32

# Application
NODE_ENV=production
PORT=3000
API_URL=https://api-staging.yourdomain.com

# Database
DATABASE_URL=postgresql://postgres:CHANGE_THIS_PASSWORD@postgres:5433/antiq_staging?schema=public

# Admin JWT (for organization users)
# MUST be 32+ characters - Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_UNIQUE_SECRET_MIN_32_CHARS
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_TTL=7d

# Portal JWT (for portal users)
# MUST be 32+ characters - Generate with: openssl rand -base64 32
PORTAL_JWT_SECRET=CHANGE_THIS_TO_UNIQUE_SECRET_MIN_32_CHARS
PORTAL_JWT_ACCESS_TOKEN_TTL=15m
PORTAL_JWT_REFRESH_TOKEN_TTL=7d

# OAuth - Google (staging app)
# Create at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-staging-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-staging-google-client-secret

# OAuth - Facebook (staging app)
# Create at: https://developers.facebook.com/apps/
FACEBOOK_APP_ID=your-staging-facebook-app-id
FACEBOOK_APP_SECRET=your-staging-facebook-app-secret

# OAuth - Apple Sign In (staging)
# Create at: https://developer.apple.com/account/resources/identifiers/list/serviceId
APPLE_CLIENT_ID=com.yourdomain.staging.signin
APPLE_TEAM_ID=YOUR_TEAM_ID
APPLE_KEY_ID=YOUR_KEY_ID
APPLE_PRIVATE_KEY_PATH=/app/certs/AuthKey_STAGING.p8

# Security
CORS_ORIGINS=https://staging.yourdomain.com,https://api-staging.yourdomain.com

# Observability
LOG_LEVEL=debug

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=noreply@staging.yourdomain.com
EMAIL_PASSWORD=YOUR_EMAIL_APP_PASSWORD
EMAIL_FROM=noreply@staging.yourdomain.com
EMAIL_FROM_NAME=EG Antiq Staging
FRONTEND_URL=https://staging.yourdomain.com

# ==========================================
# DEPLOYMENT NOTES:
# ==========================================
# 1. Generate new JWT secrets: openssl rand -base64 32
# 2. Configure OAuth apps for staging domain
# 3. Update DATABASE_URL password
# 4. Configure email service credentials
# 5. Update API_URL and FRONTEND_URL to match your staging domain
# ==========================================

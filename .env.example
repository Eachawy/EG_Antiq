# Application
NODE_ENV=development
PORT=3000
APP_VERSION=1.0.0
SERVICE_NAME=api
API_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/eg_antiq

# Admin JWT (for organization users)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_TTL=7d

# Portal JWT (for portal users)
PORTAL_JWT_SECRET=your-portal-jwt-secret-min-32-characters-long
PORTAL_JWT_ACCESS_TOKEN_TTL=15m
PORTAL_JWT_REFRESH_TOKEN_TTL=7d

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth - Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# OAuth - Apple Sign In
APPLE_CLIENT_ID=your-apple-service-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=path/to/apple/AuthKey_KEYID.p8

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Observability
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=3600000

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=noreply@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=EG Antiq
FRONTEND_URL=http://localhost:3000
